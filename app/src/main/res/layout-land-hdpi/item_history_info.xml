<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e1e1e"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_history_info_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/history_font_size" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
             android:gravity="center" >

            <TextView
                android:id="@+id/item_history_info_color"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="#cc4040"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_history_info_stockCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="证券代码"
            android:textColor="@color/white"
            android:textSize="@dimen/history_font_size" />

        <TextView
            android:id="@+id/item_history_info_stockName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="证券名称"
            android:textColor="@color/white"
            android:textSize="@dimen/history_font_size" />

        <TextView
            android:id="@+id/item_history_info_allCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="11000"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/history_font_size" />

        <TextView
            android:id="@+id/item_history_info_jiaoyiliang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="1000t5550"
            android:textColor="@color/white"
            android:textSize="@dimen/history_font_size" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center" >

            <TextView
                android:id="@+id/item_history_info_yikui"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="#cc4040"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:text="34.45"
                android:textColor="@color/white"
                android:textSize="@dimen/history_font_size" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="#000000" />

</LinearLayout>